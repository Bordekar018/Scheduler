<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".del_stud"
android:background="@drawable/databack"
    >

<EditText
    android:id="@+id/dels"
    android:layout_width="wrap_content"
    android:layout_height="35dp"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginLeft="0.6in"
    android:layout_marginTop="251dp"
    android:background="@drawable/edit_text_database"
    android:drawableLeft="@drawable/ic_adb"
    android:ems="10"
    android:hint="ID"
    android:inputType="textPersonName"
    android:textColorHint="#ffffff" />

<Button
    android:id="@+id/studel"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_below="@id/dels"
    android:layout_alignStart="@+id/dels"
    android:layout_centerHorizontal="true"
    android:layout_marginStart="6dp"
    android:layout_marginTop="28dp"
    android:background="@drawable/btn_database"
    android:text="delete"
    android:textColor="#ffffff"/>

</RelativeLayout>